### APPS ###
super + t
	alacritty
super + shift + t
	kitty

super + b
	librewolf-bin
super + shift + b
	librewolf-bin --private-window

super + v
	mpv --player-operation-mode=pseudo-gui --keep-open
super + shift + v
	mpv --player-operation-mode=pseudo-gui --keep-open --shuffle --loop-playlist ~/Media/Music/

### GENERAL ###
# Close and Kill
super + {_, shift + }x
	bspc node -{c,k}
super + ctrl + x
	bspc node -g locked
# Floating and Fullscreen
super + {_, shift + }f
	bspc node -t {'~fullscreen','~floating'}
super + {_, shift + }grave
	bspc node -t {'~tiled', '~pseudo_tiled'}
# Pin
super + p
	bspc node -g sticky
# Lockscreen
super + l
	xsecurelock
# Power Options
super + Escape
	power_menu
super + shift + Escape
	loginctl poweroff
# Rofi
{Menu, super + space}
	rofi -show drun
# Screenshot
{Print, super + s}
	flameshot gui
# Clipboard
super + c
	CM_LAUNCHER=rofi clipmenu
# Display Menu
super + d
	display_menu
# Reload sxhkd
super + r
	pkill -USR1 -x sxhkd

### BSPWM ###
# Quit and restart
super + shift + {q,r}
	bspc {quit,wm -r}
# Workspaces
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '{1-9,10}'
super + {_,shift + }F{1-3}
	bspc {desktop -f,node -d} '{I,II,III}'
# Move focus
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}
super + shift + {Left,Down,Up,Right}
	bspc node -s {west,south,north,east}

### SYSTEM ###
# Brightness
XF86MonBrightness{Up,Down}  
	brightnessctl s 5%{+,-}
# Audio
XF86Audio{Raise,Lower}Volume  
	pamixer --allow-boost {-i,-d}5
XF86AudioMute  
	pamixer -t
# Player
XF86Audio{Pause,Play,Next,Prev}
	playerctl {pause,play-pause,next,previous}
# Mouse Player Controls
super + {button2,button8,button9}
	playerctl {play-pause,previous,next}

~button2
    ;echo -n | xclip -in
